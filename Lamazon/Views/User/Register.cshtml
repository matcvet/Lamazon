@model UserViewModel

<div class="container mt-5">
    @using (Html.BeginForm())
    {
        <div class="row centered-content justify-content-center">
            <div class="col-md-4">
                <h4 class="login-title">Please register</h4>
            </div>
        </div>

        <div class="row centered-content justify-content-center">
            <div class="col-md-4">
                <p class="text-danger">@Html.ValidationMessage("UserRegisterError")</p>
            </div>
        </div>

        <div class="row centered-content justify-content-center">
            <div class="col-md-4 form-group">
                <label asp-for="Email"></label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>
        </div>

        <div class="row centered-content justify-content-center">
            <div class="col-md-4 form-group">
                <label asp-for="Username"></label>
                <input class="form-control" type="text" asp-for="Username" />
            </div>
        </div>

        <div class="row centered-content justify-content-center">
            <div class="col-md-4 form-group">
                <label asp-for="FullName"></label>
                <input class="form-control" type="text" asp-for="FullName" />
            </div>
        </div>

        <div class="row centered-content justify-content-center">
            <div class="col-md-4 form-group">
                <label asp-for="Password"></label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>
        </div>



        <div class="row centered-content justify-content-center">
            <div class="col-md-4 form-group text-right py-3">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </div>
    }
</div>